{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      // "@/*": ["./*"]
      "@/*": ["./*"], // 映射 @ 到 src 文件夹
      "@components/*": ["components/*"], // 映射 @components 到 src/components 文件夹
      "@ui/*": ["components/ui/*"] // 映射 @ui 到 src/components/ui 文件夹
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"]
}
